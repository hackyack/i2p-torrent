<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="SOTB\CoreBundle\Document\Torrent">

        <group-sequence-provider/>

        <constraint name="Callback">
            <option name="methods">
                <value>isValid</value>
            </option>
            <option name="groups">
                <value>either</value>
            </option>
        </constraint>

        <property name="title">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>always</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">3</option>
                <option name="message">The title must have at least {{ limit }} characters.</option>
                <option name="groups">
                    <value>always</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="groups">
                    <value>always</value>
                </option>
            </constraint>
        </property>
        <property name="description">
            <constraint name="MaxLength">
                <option name="limit">5000</option>
                <option name="groups">
                    <value>always</value>
                </option>
            </constraint>
        </property>
        <property name="hash">
            <constraint name="MaxLength">
                <option name="limit">1024</option>
                <option name="message">The hash cannot be more than {{limit}} characters.</option>
                <option name="groups">
                    <value>always</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">32</option>
                <option name="message">The hash must be at least 32 characters.</option>
                <option name="groups">
                    <value>hash</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="message">The hash cannot be blank.</option>
                <option name="groups">
                    <value>hash</value>
                </option>
            </constraint>
            <constraint name="SOTB\CoreBundle\Validator\Constraints\HashOrMagnet">
                <option name="groups">
                    <value>hash</value>
                </option>
            </constraint>
        </property>
        <property name="filename">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>application/x-bittorrent</value>
                    <value>application/octet-stream</value>
                    <value>text/plain</value>
                </option>
                <option name="groups">
                    <value>upload</value>
                </option>
            </constraint>
            <constraint name="SOTB\CoreBundle\Validator\Constraints\TorrentFile">
                <option name="groups">
                    <value>upload</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>upload</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>