<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                        http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="SOTB\CoreBundle\Document\Request" collection="Requests">

        <field name="id" id="true"/>
        <reference-one name="user" fieldName="user" field="user" target-document="SOTB\UserBundle\Document\User"/>

        <field name="hash" fieldName="hash" type="string"/>
        <field name="title" fieldName="title" type="string"/>
        <field name="description" fieldName="description" type="string"/>
        <field name="requests" fieldName="requests" type="int"/>

        <field name="slug" type="string" length="156" unique="true">
            <gedmo:slug unique="true" fields="title" />
        </field>

        <field name="created" fieldName="created" type="date"/>
    </document>
</doctrine-mongo-mapping>