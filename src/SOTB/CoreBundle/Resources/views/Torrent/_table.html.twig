<table class="table table-striped">
    <thead>
    <tr>
        <th>Download</th>
        <th>{{ pagination.sortable('Name', 'title', {'defaultDirection': 'asc'})|raw }}</th>
        <th>{{ pagination.sortable('Uploaded', 'created', {'defaultDirection': 'desc'})|raw }}</th>
        <th style="text-align: center">{{ pagination.sortable('Seeders', 'seeders', {'defaultDirection': 'desc'})|raw }}</th>
        <th style="text-align: center">{{ pagination.sortable('Leechers', 'leechers', {'defaultDirection': 'desc'})|raw }}</th>
        <th style="text-align: center">{{ pagination.sortable('Requests', 'requestCount', {'defaultDirection': 'desc'})|raw }}</th>
    </tr>
    </thead>
    <tbody>
    {% for torrent in pagination %}
    <tr>
        <td>
            <a href="{{ path('torrent_download', {'slug':torrent.slug}) }}"><i class="icon-download-alt"></i> torrent</a>
            <br/>
            <a href="{{ torrent.magnet }}"><i class="icon-magnet"></i> magnet</a>
        </td>
        <td>
            <a href="{{ path('torrent', {'slug': torrent.slug}) }}">{{ torrent.title }}</a><br/>
            {{ torrent.hash }}
        </td>
        <td>{{ torrent.created | date }}</td>
        <td style="text-align: center"><span class="badge badge-success"><i class="icon-arrow-up icon-white"></i>{{ torrent.seeders }}</span></td>
        <td style="text-align: center"><span class="badge badge-warning"><i class="icon-arrow-down icon-white"></i>{{ torrent.leechers }}</span></td>
        <td style="text-align: center"><span class="badge badge-info"><i class="icon-plus icon-white"></i>{{ torrent.requestCount }}</span></td>

    </tr>
    {% else %}
    <tr>
        <td colspan="7"><i class="icon-info-sign"></i> There are no torrents.</td>
    </tr>
    {% endfor %}
    </tbody>
</table>